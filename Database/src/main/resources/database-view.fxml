<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
         prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE" 
         xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
         fx:controller="DatabaseController">
  <tabs>
    <Tab text="Cashier">
      <content>
        <BorderPane>
          <center>
            <VBox spacing="10">
              <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
              <Label text="Menu Items" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
              <ScrollPane fitToWidth="true" prefHeight="400.0">
                <content>
                  <FlowPane fx:id="buttonContainer" hgap="10.0" vgap="10.0" prefWrapLength="500.0" />
                </content>
              </ScrollPane>
            </VBox>
          </center>
          <right>
            <VBox spacing="10" prefWidth="250.0" style="-fx-background-color: #f4f4f4;">
              <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
              <Label text="Current Order" style="-fx-font-weight: bold;"/>
              <TableView fx:id="cartList" VBox.vgrow="ALWAYS">
                <columns>
                  <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Item" />
                  <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Price" />
                </columns>
              </TableView>
              <Label fx:id="totalLabel" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Total: $0.00" />
              <Button fx:id="queryButton" maxWidth="Infinity" text="Refresh Menu" />
              <Button fx:id="submitOrderButton" maxWidth="Infinity" style="-fx-base: #2ecc71;" text="Submit Order" />
              <Separator/>
              <Button fx:id="closeButton" maxWidth="Infinity" text="Exit Application" style="-fx-base: #e74c3c; -fx-text-fill: white;" />
            </VBox>
          </right>
        </BorderPane>
      </content>
    </Tab>

    <Tab text="Manager">
      <content>
        <VBox spacing="20">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Manager Dashboard" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <HBox spacing="10">
                <Button text="Manage Inventory" prefWidth="150" prefHeight="50"/>
                <Button text="Manage Menu" prefWidth="150" prefHeight="50"/>
                <Button text="Employee Management" prefWidth="150" prefHeight="50"/>
                <Button text="View Reports" prefWidth="150" prefHeight="50"/>
            </HBox>
            <Separator/>
            <Label text="Select a category above to view and update database records." style="-fx-font-style: italic;"/>
        </VBox>
      </content>
    </Tab>
  </tabs>
</TabPane>
