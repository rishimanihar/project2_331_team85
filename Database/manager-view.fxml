<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ManagerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TableView fx:id="inventoryTable" prefHeight="350.0" prefWidth="560.0">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="400.0" text="Product Name" />
            <TableColumn fx:id="priceColumn" prefWidth="150.0" text="Price" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="nameInput" promptText="Product Name" />
        <TextField fx:id="priceInput" promptText="Price (Integer)" prefWidth="100.0" />
        <Button fx:id="addButton" mnemonicParsing="false" text="Add Item" />
        <Button fx:id="updateButton" mnemonicParsing="false" text="Update Price" />
        <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete Item" />
    </HBox>
    
    <Button fx:id="closeButton" mnemonicParsing="false" text="Close Manager View" />
</VBox>